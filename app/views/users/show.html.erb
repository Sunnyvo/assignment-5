<div class="content"><h1><%= @user==current_user ? "Your profile" : (@user.name + "Profile")  %></h1></div>
<div class="columns ">
  <div class="column is-one-third  ">
    <div class="card user-card  table-br-color" >
      <div class="card-content">
          <div class="field">
            <div class="label">Name</div>
            <div class="control">
              <p class=""> <%= @user.name %></p>
            </div>
          </div>
          <div class="field">
            <div class="label">Email</div>
            <div class="control">
              <p class=""> <%= @user.email %> </p>
            </div>
          </div>
          <div class="field">
            <div class="label">Favoite</div>
            <div class="control">
              <p class=""> love football </p>
            </div>
          </div>
          <div class="field">
            <div class="label">Image:</div>
            <div class="control">
              <img class="card-image" src="<%= @user.image_url_or_default %>" alt="Card image cap">
            </div>
          </div>
          <% if current_user.id == @user.id %>
            <div class="field">
              <%=link_to "Edit profile", update_profile_path, class: "button is-primary" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
  <div class="column">
  </div>
</div>
