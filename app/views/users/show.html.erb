
<div class="content"><h1 style="color:#b5a3b6; background-color: #1e97bd"><%=  @user==current_user ? "Your profile" : (@user.name + "Profile")  %></h1></div>
  <div class="columns ">
    <div class="column is-one-third  ">
      <div class="card user-card" style="background-color: #9f8d89;" >
        <div class="card-content">
            <div class="field">
              <div class="label">Name</div>
              <div class="control">
                <p class=""> <%= @user.name %></p>
              </div>
            </div>
            <div class="field">
              <div class="label">Email</div>
              <div class="control">
                <p class=""> <%= @user.email %> </p>
              </div>
            </div>
            <div class="field">
              <div class="label">Favoite</div>
              <div class="control">
                <p class=""> love football </p>
              </div>
            </div>
            <div class="field">
              <div class="label">Image:</div>
              <div class="control">
                <img class="card-image" src="<%= @user.image_url_or_default %>" alt="Card image cap">
              </div>
            </div>
            <% if current_user.id == @user.id %>
              <div class="field">
                <%=link_to "Edit profile", update_profile_path, class: "button is-primary" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>


    <div class="column is-centered">
      <% if @user==current_user %>
        <div class="field">
          <label class="label" style="color:#0743cd; background-color:#a3a9b6">How do you feel to day?</label>
          <div class="control">
            <%= form_for @post=Post.new do |f| %>
              <%= f.hidden_field :user_id, value: current_user.id%>
              <%= f.text_area :text_post, class: "form-control textarea", placeholder: "We are here to understand you..." %>
              <%= f.submit "Post", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      <% end %>
      <% @user.post.each do |po|%>
        <div class="card card-inverse" >
          <div class="card-name" style="background-color:#333; border-color: #333; margin-top:5px; color:white">
              <%= @user.name %>
          </div>
          <div class="card-content" style="background-color:#9f8d89; color:#cd2a07">
            <%= po.text_post %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
