
  <div class="content"><h1 style="color:#b5a3b6; background-color: #1e97bd; text-align: center;">Edit Profile</h1></div>
  <div class="columns">
    <div class="column is-one-third">
      <div class="card user-card">
        <div class="card-content">
          <%= form_for @user do |f| %>
            <div class="field">
              <div class="label">Name</div>
              <div class="control">
                <%= f.text_field :name, class: 'input' %>
              </div>
            </div>
            <div class="field">
              <div class="label">Email</div>
              <div class="control">
                <%= f.text_field :email, class: 'input' %>
              </div>
            </div>
            <div class="field">
              <div class="label">Password</div>
              <div class="control">
                <%= f.password_field :password, class: 'input' %>
              </div>
            </div>

            <div class="field">
              <div class="label">URL avatar</div>
              <div class="control">
                <%= f.text_field :image_url, class: 'input' %>
                <%= image_tag current_user.image_url_or_default %>
              </div>
            </div>
            <%= f.submit "Update Profile", class: "button is-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

