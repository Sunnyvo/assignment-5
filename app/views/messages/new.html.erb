<h1 class= "tittle">New message</h1>
<%= form_for @message do |f|%>
  <div class="field">
    <div class="control">
      <div class="select">
        <%= f.select :receiver_id, User.receiver_options(current_user) %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.text_area :body, class: "textarea" %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is primary">
        <%= icon("send", "Send") %>
      </button>
    </div>
  </div>
<% end %>

